<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.sptbi.IncubatorDetails"
    android:layout_margin="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/detail_img"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="#ffffff"/>

        <LinearLayout
            android:id="@+id/name_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_img"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Incubation name"/>
            <TextView
                android:id="@+id/detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Incubation name"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fndr_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_detail"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Founder"/>
            <TextView
                android:id="@+id/detail_fndr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Founder"
                android:layout_marginBottom="16dp"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:textSize="18sp"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/jfrm_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fndr_detail"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Joined from"/>
            <TextView
                android:id="@+id/detail_jfrm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:textSize="18sp"
                android:textColor="#000000"
                android:hint="DD-MM-YYYY"
                android:onClick="showDatePickerDialog"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/email_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/jfrm_detail"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"/>
            <TextView
                android:id="@+id/detail_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/contact_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_detail"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact"/>
            <TextView
                android:id="@+id/detail_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>

    </RelativeLayout>

</ScrollView>
